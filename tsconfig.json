{
  "compilerOptions": {
    "types": [
      "next"
    ],
    "paths": {
      "@payload-config": [
        "./payload.config.ts"
      ]
    },
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // Recommended for better type safety
    "noEmit": true,
    "incremental": true,
    "module": "node16", // Set to "node16" or "nodenext"
    "esModuleInterop": true,
    "moduleResolution": "node16", // Matches the "module" option
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "." // Add this to resolve paths correctly
    ,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
